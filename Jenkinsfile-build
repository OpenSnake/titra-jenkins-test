pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/OpenSnake/titra-test.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'meteor npm ci'
            }
        }

        stage('Build Project') {
            steps {
                sh 'meteor build ./build-output'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'meteor test --once --driver-package meteortesting:mocha'
            }
        }
    }

    post {
        success {
            echo '✅ Tests passed successfully.'
        }
        failure {
            echo '❌ Tests failed.'
        }
    }
}
