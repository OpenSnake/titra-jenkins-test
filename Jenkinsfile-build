pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/OpenSnake/titra-test.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'meteor npm ci'
            }
        }

        stage('Build Project') {
            steps {
                sh 'meteor build ./build-output'
            }
        }
    }
}
