pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/OpenSnake/titra-test.git'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'meteor npm ci'
            }
        }

        stage('Run linting') {
            script {
              try {
                sh 'meteor npx eslint . --fix'
              } catch (err) {
                echo "Linting failed, but we are moving on"
                }
            }
        }

        stage('Run tests') {
            steps {
                echo "Tests here"
            }
        }

        stage('Run build') {
            steps {
                sh 'meteor build ../'
            }
        }
    }

    post {
        success {
            echo '✅ Continuous Integration completed successfully'
        }
        failure {
            echo '❌ Continuous Integration has not been successfully completed'
        }
    }
}
